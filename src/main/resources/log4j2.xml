<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d [%p] %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </Console>
        <Properties>
            <Property name="noConsoleNoAnsi">false</Property>
        </Properties>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>
